<div class="offer-details">
    <h1>{{name}}</h1>
    <div class="info">
        <img src="{{imageUrl}}" alt="shoeImage">
        <div class="description">
            {{description}}
            <br>
            <br>
            <p> <strong>Buyers:</strong> {{boughtCount}}</p>
            <br>
            <p class="price">${{price}}</p>
        </div>
    </div>
    <div class="actions">
        {{#if isOwner}}
        <a href="#/edit/{{objectId}}">Edit</a>
        <a href="#/delete/{{objectId}}">Delete</a>
        {{else}}
            {{#if isPurchased}}
            <span>You bought it</span>
            {{else}}
            <a href="#/buy/{{objectId}}">Buy</a>
            {{/if}}
        {{/if}}
    </div>
</div>